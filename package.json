{
  "name": "app-entretelas",
  "version": "1.0.3",
  "description": "Desktop business-manager application built with **Electron + React + SQLite**.",
  "main": "src/main/index.js",
  "scripts": {
    "preinstall": "node scripts/verify-official-sources.js",
    "predev": "npm run rebuild-natives",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder",
    "pretest": "npm run rebuild-natives:node",
    "test": "vitest run",
    "pretest:watch": "npm run rebuild-natives:node",
    "test:watch": "vitest",
    "pretest:coverage": "npm run rebuild-natives:node",
    "test:coverage": "vitest run --coverage",
    "pretest:ui": "npm run rebuild-natives:node",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test tests/e2e/",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix && prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "prepare": "husky",
    "postinstall": "npm run rebuild-natives || echo [WARN] Native rebuild skipped due file lock; run npm run rebuild-natives manually after closing the app.",
    "cleanup-native-locks": "node scripts/cleanup-native-locks.js",
    "rebuild-natives:node": "npm run cleanup-native-locks && npm rebuild better-sqlite3",
    "rebuild-natives": "npm run cleanup-native-locks && electron-rebuild -f -w better-sqlite3",
    "audit:security": "npm audit --production"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertmmateo-blip/App-Entretelas.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/albertmmateo-blip/App-Entretelas/issues"
  },
  "homepage": "https://github.com/albertmmateo-blip/App-Entretelas#readme",
  "build": {
    "appId": "com.entretelas.app",
    "productName": "App-Entretelas",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist-renderer/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/renderer/assets/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer/installer.nsh",
      "installerSidebar": "build/installer/welcome-sidebar.bmp",
      "uninstallerSidebar": "build/installer/welcome-sidebar.bmp"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-window-state": "^5.0.3",
    "pdfjs-dist": "^5.4.624",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^30.5.1",
    "electron-builder": "^26.8.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.2.0",
    "vite": "^5.4.21",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
